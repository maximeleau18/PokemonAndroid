<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2.5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="2.5dp"
    android:background="@drawable/list_item_activated_background" >
        <TextView
            android:id="@+id/row_pokemon_surnom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />
        <TextView
            android:id="@+id/row_pokemon_niveau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_pokemon_surnom" />
        <TextView
            android:id="@+id/row_pokemon_capturele"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_pokemon_niveau" />
        <TextView
            android:id="@+id/row_pokemon_attaque1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_pokemon_capturele" />
        <TextView
            android:id="@+id/row_pokemon_attaque2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_pokemon_attaque1" />
        <TextView
            android:id="@+id/row_pokemon_attaque3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_pokemon_attaque2" />
        <TextView
            android:id="@+id/row_pokemon_attaque4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_pokemon_attaque3" />
        <TextView
            android:id="@+id/row_pokemon_typedepokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_pokemon_attaque4" />
        <TextView
            android:id="@+id/row_pokemon_personnagenonjoueur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_pokemon_typedepokemon" />

</RelativeLayout>
