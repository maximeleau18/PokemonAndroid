<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:harmony="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:id="@+id/personnagenonjoueurbadge_personnagenonjoueur_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/personnagenonjoueurbadge_personnagenonjoueur_label"/>
    <com.maximeleau.harmony.android.pokemon.harmony.widget.SingleEntityWidget
        android:id="@+id/personnagenonjoueurbadge_personnagenonjoueur_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personnagenonjoueurbadge_personnagenonjoueur_label" />
    <TextView
        android:id="@+id/personnagenonjoueurbadge_badge_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personnagenonjoueurbadge_personnagenonjoueur_button"
        android:text="@string/personnagenonjoueurbadge_badge_label"/>
    <com.maximeleau.harmony.android.pokemon.harmony.widget.SingleEntityWidget
        android:id="@+id/personnagenonjoueurbadge_badge_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personnagenonjoueurbadge_badge_label" />
</RelativeLayout>
