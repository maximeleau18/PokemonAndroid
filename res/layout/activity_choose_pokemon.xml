<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/fragment"
        android:name="com.maximeleau.harmony.android.pokemon.view.choosepokemon.ChoosePokemonFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_choose_pokemon">
    </fragment>

    <fragment
        android:id="@+id/fragment_list"
        android:name="com.maximeleau.harmony.android.pokemon.view.choosepokemon.ChoosePokemonListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_choose_pokemon_list">
    </fragment>

</LinearLayout>